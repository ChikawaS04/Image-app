@model NBD3.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <!-- Image display section -->
    @{
        if (Model.ProjectPhoto?.Content != null)
        {
            @:<div>
                string imageBase64 = Convert.ToBase64String(Model.ProjectPhoto.Content);
                string imageSrc = string.Format("data:" + Model.ProjectPhoto.MimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Blueprint for @Model.ProjectName" title="Blueprint for @Model.ProjectName" class="img-fluid rounded" />
            @:</div><hr />
        }
        else
        {
            <p class="text-center">No picture available.</p>
        }
    }
    <!-- Image display section -->
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <div class="col-sm-4">
                    <dt>Project Name:</dt>
                    <dd>@Model.ProjectName</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Description:</dt>
                    <dd>@Model.ProjectDescription</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Start Date:</dt>
                    <dd>@Model.ProjectStartDate</dd>
                </div>
                <div class="col-sm-4">
                    <dt>End Date:</dt>
                    <dd>@Model.ProjectEndDate</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Client:</dt>
                    <dd>@Model.Client.ContactFullName</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Project Location:</dt>
                    <dd>@Model.Location.LocationName</dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ProjectId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to Project List</a>
    </div>
</div>
